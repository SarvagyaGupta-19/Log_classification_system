# Environment Variables for Log Classification System

# Application
APP_NAME=Log Classification System
APP_VERSION=2.0.0
ENVIRONMENT=production
DEBUG=false

# Database (PostgreSQL)
DATABASE_URL=postgresql://loguser:logpass123@localhost:5432/log_classifier
# For SQLite (development): sqlite:///./log_classifier.db

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
JWT_SECRET_KEY=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-KEY-IN-PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ML Models
BERT_MODEL_NAME=all-MiniLM-L6-v2
BERT_CONFIDENCE_THRESHOLD=0.5
CLASSIFIER_MODEL_PATH=models/log_classifier.joblib

# Groq API (LLM)
GROQ_API_KEY=your-groq-api-key-here
LLM_MODEL_NAME=llama-3.3-70b-versatile
LLM_TEMPERATURE=0.5

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=2

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true

# File Processing
MAX_FILE_SIZE_MB=50
CLASSIFICATION_TIMEOUT=30

# Job Management
USE_ASYNC_PROCESSING=true
JOB_RETENTION_HOURS=168  # 7 days
